@model IEnumerable<BlackboardDatabase.Models.CourseContent>

@{
    ViewData["Title"] = "CourseContent";
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Course.CourseName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CourseContentId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CourseContentId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CourseContentId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
