@model IEnumerable<BlackboardDatabase.Models.Course>

@{
    ViewData["Title"] = "Index";
}

<h2>Courses</h2>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CourseName)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CourseName)
        </td>
        <td>
            <a asp-action="DetailsTeachers" asp-route-id="@item.CourseName">Teachers</a> |
            <a asp-action="DetailsStudents" asp-route-id="@item.CourseName">Students</a> |
            <a asp-action="AddStudent" asp-route-id="@item.CourseName">Add Student</a> |
            <a asp-controller="CourseContents" asp-action="Index" asp-route-courseName="@item.CourseName">CourseContent</a> 
        </td>
    </tr>
}
    </tbody>
</table>
